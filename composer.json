{
  "name": "pi/user",
  "description": "Api base authentication and user management module via laminas and pi",
  "license": "BSD-3-Clause",
  "keywords": [
    "Pi",
    "Pi Engine",
    "Laminas",
    "Laminas MVC",
    "Laminas Module",
    "User management",
    "User management",
    "Psr",
    "MultiTenant",
    "SaaS"
  ],
  "homepage": "https://piengine.org",
  "authors": [
    {
      "name": "Hossein Azizabadi Farahani",
      "email": "hossein@azizabadi.com"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0",
    "ext-redis": "*",
    "ext-ctype": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-spl": "*",
    "lib-curl": "*",
    "laminas/laminas-component-installer": "^2.4",
    "laminas/laminas-development-mode": "^3.2",
    "laminas/laminas-skeleton-installer": "^0.3",
    "laminas/laminas-mvc": "^3.3.3",
    "laminas/laminas-mvc-i18n": "^1.3.1",
    "laminas/laminas-mvc-plugins": "^1.2.0",
    "laminas/laminas-mvc-middleware": "^2.2",
    "laminas/laminas-db": "^2.12.0",
    "laminas/laminas-json": "^3.3",
    "laminas/laminas-log": "^2.15.1",
    "laminas/laminas-authentication": "^2.11",
    "laminas/laminas-crypt": "^3.8",
    "laminas/laminas-http": "^2.15",
    "laminas/laminas-eventmanager": "^3.5",
    "laminas/laminas-cache": "^3.1",
    "laminas/laminas-cache-storage-adapter-redis": "^2.1",
    "laminas/laminas-serializer": "^2.13",
    "laminas/laminas-inputfilter": "^2.18",
    "laminas/laminas-permissions-rbac": "^3.2",
    "laminas/laminas-i18n": "^2.14",
    "laminas/laminas-file": "^2.11",
    "laminas/laminas-soap": "^2.10",
    "laminas/laminas-config": "^3.7",
    "firebase/php-jwt": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "User\\": "vendor/pi/user/src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r 'if (file_exists(\"bin/post-install.php\")) include \"bin/post-install.php\";'"
    ],
    "post-update-cmd": [
      "php -r 'if (file_exists(\"bin/post-update.php\")) include \"bin/post-update.php\";'"
    ],
    "post-package-uninstall": [
      "php -r 'if (file_exists(\"bin/post-remove.php\")) include \"bin/post-remove.php\";'"
    ]
  },
  "suggest": {
    "ext-apc": "for opcode cache and system persistent data",
    "ext-discount": "for Markdown text parsing",
    "ext-intl": "for i18n features"
  }
}
